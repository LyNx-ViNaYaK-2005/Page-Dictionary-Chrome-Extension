{
  "manifest_version": 3,
  "name": "Page Dictionary",
  "version": "1.0",
  "description": "Freeze page and show meanings for highlighted words using FreeDictionaryAPI.com.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Freeze & Define",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },

  "permissions": [
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "https://freedictionaryapi.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  }
}
